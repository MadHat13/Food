<view class="page">
  <view class="page__hd">
    <view class='weui-flex'>
      <view class='weui-flex__item'>
        <view class='HeadPortrait'>
          <image class='headpor' src='../../images/4.png'></image>
        </view>
      </view>
      <view class='weui-flex__item'>
        <view class='page__title name'>我还是从前那个少年</view>
        <button class="data" size="mini" style='font-size: 10pt !important;'>编辑资料</button>
        </view>
      <view class='weui-flex__item'>
        <view class='two'>
          <image class='news' src='../../images/new.png'></image>
          <view class='weui-badge newpro'>8</view>
          <view class='mores'>
            <view class='list-more' bindtap='bindShowMsg'>
              <image style="color:{{color}}" class='more' src='../../images/more.png'></image>
             
            </view>
            <cover-view class="select_box" wx:if="{{select}}">
              <cover-view class="select_one" bindtap="mySelect" data-name="使用说明">使用说明</cover-view>
