/* miniprogram/pages/index/index.wxss */
#swiper-main{
  margin: 0;
  margin-left: 25px;
  margin-top: -50px;
  padding: 0;
  width: 100%;
  height: 300px;
}

swiper{
  height: 400rpx;
  width:100%;
}

swiper-item {
  height: 100%;
  width: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
  padding: 10rpx;
  box-sizing: border-box;
}

.NowDate {
  border: 1rpx solid #ccc;
  font-size: 60rpx;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  flex: 0.5;
}

.mid-Content {
  position: relative;
  display: flex;
}

.uploadFile {
  border: 1rpx solid #ccc;
  font-size: 40rpx;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
}

.dishName {
  border: 1rpx solid #ccc;
  font-size: 40rpx;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.footerContent {
  display: flex;
  flex-wrap: nowrap;
}

