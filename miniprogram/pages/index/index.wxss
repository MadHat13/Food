.dishContent{
  display: flex;
  border: 1rpx solid #ccc;
  position: relative;
}

.dishContainer{
  background-color: #ccc;
  border-radius: 100%;
  margin-left: 60rpx;
  height: 100rpx;
  width: 100rpx;
  align-items: center;
  display: flex;
  justify-content: center;
}

.detailImage { 
  height: 50rpx;
  width: 80rpx;
  text-align: center;
}

.detailDish{
  flex: 0.5;
  font-size: 40rpx;
  text-align: center;
  margin-left: 50rpx;
  height: 100rpx;       
  line-height: 100rpx;
  border-left:1rpx solid #ccc;
}

.starButton{
  width: 100rpx;
  height: 100rpx;
  position:absolute;
  top: 6rpx;
  right:6rpx;
  border-radius: 100%;
}

