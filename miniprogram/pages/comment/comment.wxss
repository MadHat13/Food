/* pages/comment/comment.wxss */
.container{
  margin-bottom: 83rpx;
}

.page-body-info {
  display: flex;
  border-bottom: 1px solid #ccc;
}

.userinfo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 50rpx;
  margin-bottom: 30rpx;
}

.infomid {
  margin-top: 30rpx;
  margin-left: 30rpx;
  float: left;
}

.username {
  font-size: 30rpx;
}

.Comment-time {
  margin-left: 5rpx;
  width: 100rpx;
  height: 40rpx;
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #ccc;
}

.container1 {
  width: 500rpx;
  padding-bottom: 5rpx;
}

.Comment-content {
  font-size: 25rpx;
  text-overflow: ellipsis;
  word-wrap: break-word;
}

.commentImg{
  width: 200rpx;
  height: 200rpx;
}

.replyComment{
  background-color: #ccc;
  width: 500rpx;
}

.replyUserName{
  font-size: 25rpx;
}

.replyComment-content{
  font-size: 25rpx;
  text-overflow: ellipsis;
  word-wrap: break-word;
}

.reply {
  margin-bottom: 140rpx;
}

.container2 {
  position: fixed;
  bottom: 0;
  background: white;
  width: 100%;
  height: 80rpx;
}

.myComment {
  border: 1rpx solid #ccc;
  width: 80%;
  height: 80rpx;
  border-radius: 35rpx;
  margin-left: 75rpx;
}

.place-holder{
  margin-left: 10rpx;
}

